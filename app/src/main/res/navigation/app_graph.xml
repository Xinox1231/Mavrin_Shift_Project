<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/notesFragment"
        android:name="ru.mavrinvladislav.testtask2024.ui.NotesFragment"
        android:label="fragment_notes"
        tools:layout="@layout/fragment_notes" >
        <action
            android:id="@+id/action_notesFragment_to_noteEditorFragment"
            app:destination="@id/noteEditorFragment"
            app:popUpTo="@id/notesFragment" />
        <action
            android:id="@+id/action_notesFragment_to_noteEditorFragment2"
            app:destination="@id/noteEditorFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteEditorFragment"
        android:name="ru.mavrinvladislav.testtask2024.ui.NoteEditorFragment"
        android:label="fragment_note_editor"
        tools:layout="@layout/fragment_note_editor" >
        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>